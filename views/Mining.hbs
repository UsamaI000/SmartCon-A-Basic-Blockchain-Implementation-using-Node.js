{{>header}}
<title>Mining</title>
<body>
{{!--pending}}
   
    {{#each pending }}
        <li>
        {{#each this as |key value|}}
             {{value}}: {{key}}
        {{/each}} 
        </li>
    {{/each --}}


<div class="container-fluid ">
  <br>
  <div class="shadow-lg p-3 mb-5 bg-light rounded">
  <h4 class="text-center text-dark">Pending transactions of Network</h4>
  <br>          
  <div class="float-right"></div>
  <table class="table table-dark table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Amount</th>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Transaction ID</th>
      </tr>
    </thead>
    <tbody class=" bg-light">
    {{#each pending }}
        <tr>
        {{#each this as |key value|}}          
              <td><div class="text text-dark">{{key}}</div></td>
        {{/each}} 
        </tr>
    {{/each}}
    </tbody>
  </table>
    <form class="form " method="GET" action="/mine" >
  <button type="submit" class="btn btn-lg btn-dark " value="submit" >Mine</button>
</form>
</div>
</div>
</div>

<style>body {
  height: 100%;
  background-color: #fff;
}</style>

</body>