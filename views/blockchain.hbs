
{{> header }}
<title>Blockchain</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  
  <body>
    
    <br>
 
  <div class='container '>
 <h1 class="h4 mb-4 text-center text-dark" >Blockchain Simulation</h1>
<div class="float-right">
  <form class="form " method="POST" action="/register-and-broadcast-node" onsubmit=myalert()>
    <div class="form-group">
        <h5 class="text-dark"><br>Participant Address</h5>
        <input class="form-control form-control-lg" placeholder="Address" name="url" value="{{qs.nodeUrl}}">
    </div>
    
        <input type="submit" class="btn btn-lg btn-dark btn" value="Add Participant"></input>
  </form> 

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-lg btn-dark" id="myBtn">Show Participants</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"> Network Participants</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
         {{#each nodes}}
              <li>{{ this }}</li>
         {{/each}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
    </div>
  </div> 
</div>

 </div>
 </div>
  <div class="container mt-4">
  <div class="shadow-lg bg-light rounded">
  <div class="container p-2">
       <P>{{{ list }}}</P>
  </div>
  </div>
  </div>

<script>
$(document).ready(function(){
  $("#myBtn").click(function(){
    $("#myModal").modal("show");
  });
  
});
</script>

  <script>
    function myalert(){
      alert("Adding Participant to the network");
    }
  </script>
  <style>body {
  height: 100%;
  background-color: #fff;
}

</style>

  </body>

